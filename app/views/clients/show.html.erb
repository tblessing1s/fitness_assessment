
		<h1><%= @client.name %></h1>

		<ul>
			<ul><strong>Email:</strong> <%= @client.email %></ul>
			<ul><strong>Phone:</strong> <%= @client.phone %></ul>
			<ul><strong>Date of Birth:</strong> <%= @client.date_of_birth %></ul>
			<ul><strong>Home Address:</strong> <%= @client.home_address %></ul>
		</ul>

	<% content_for :side do %>
			<a class="nav-link"><%= link_to 'Start New Assessment >>', new_assessment_path %></a>
		    <a class="nav-link"><%= link_to "All Clients", clients_path %></a>
		    <a class="nav-link"><%= link_to "Edit Client", edit_client_path(@client) %></a>
		    <a class="nav-link"><%= link_to "Past Assessments", client_assessments_path(@client, @assessment) %></a>
		    <a class="nav-link"><%= link_to "Delete Client", client_path(@client), method: :delete, data: { confirm: 'Are you sure you would like to delete?'} %></a>
	<% end %>