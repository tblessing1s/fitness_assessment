	<%= render 'assessments/partials/use_incline_bench', f: f %>
	  </div>
	</div>
  </div>
  <div class="card">
    <div class="card-header">
      <h4 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse6">Lying On Bench</a>
      </h4>
    </div>
    <div id="collapse6" class="panel-collapse collapse in">
      <div class="panel-body">
    <%= render 'assessments/partials/lying_on_bench', f: f %>
	  </div>
	</div>
  </div>
  <div class="card">
    <div class="card-header">
      <h4 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse7">Seated In Chair</a>
      </h4>
    </div>
    <div id="collapse7" class="panel-collapse collapse in">
      <div class="panel-body">
	<%= render 'assessments/partials/seated_in_chair', f: f %>
	  </div>
	</div>
  </div>
  <div class="card">
    <div class="card-header">
      <h4 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse8">Lying On Floor</a>
      </h4>
    </div>
