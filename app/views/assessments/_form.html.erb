<form class="needs-validation" novalidate>
<%= form_for(@assessment) do |f| %>
  <%= render "shared/errors" %>	
  <div style="padding-bottom: 20px; text-align: center;">
    <%= f.select :client_id, Client.all.collect { |c| [c.name, c.id]}, include_blank: true %> 
  </div>
<div id="accordion">
  <div class="card">
    <div class="card-header">
      <h4 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Lying on Back</a>
	</h4>
</div>
    <div id="collapse1" class="panel-collapse collapse in">
      <div class="panel-body">
	<%= render 'assessments/partials/lying_on_back', f: f %>
  </div>
</div>
</div>
  <div class="card">
    <div class="card-header">
      <h4 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Lying On Stomach</a>
      </h4>
	</div>
    <div id="collapse2" class="panel-collapse collapse in">
      <div class="panel-body">
	<%= render 'assessments/partials/lying_on_stomach', f: f %>
	  </div>
	</div>
  </div>
</div>
  <div class="card">
    <div class="card-header">
      <h4 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">Seated On Edge of Table</a>
      </h4>
    </div>
    <div id="collapse3" class="panel-collapse collapse in">
      <div class="panel-body">
	<%= render 'assessments/partials/seated_on_edge_of_table', f: f %>
	  </div>
	</div>
  </div>
  <div class="card">
    <div class="card-header">
      <h4 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse4">Bench Next To Wall</a>
      </h4>
    </div>
    <div id="collapse4" class="panel-collapse collapse in">
      <div class="panel-body">
	<%= render 'assessments/partials/bench_next_to_wall', f: f %>
	  </div>
	</div>
  </div>
  <div class="card">
