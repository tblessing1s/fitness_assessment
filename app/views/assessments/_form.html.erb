      <div class="panel-body">
   <%= render 'assessments/partials/lying_on_floor', f: f %>
	  </div>
	</div>
  </div>
    <%= f.submit "Submit Assessment", class: "btn btn-primary btn-lg btn-block" %>
<% end %>
</form>